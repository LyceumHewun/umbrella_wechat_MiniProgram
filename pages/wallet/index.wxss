/* pages/wallet/index.wxss */

.wallet {
  padding: 18vh 50rpx 30rpx;
  height: 180rpx;
}

.wallet .title {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: white;
}

.wallet .money {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 80rpx;
  font-weight: bolder;
  color: white;
}

.button-view {
  margin: 30rpx 50rpx;
}

.button-view button {
  width: 48%;
  display: inline-block;
  background-color: transparent;
  font-size: 30rpx;
  line-height: 80rpx;
}

.wallet-log {
  margin: 30rpx 50rpx;
}

.wallet-log .wallet-log-item {
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #333;
}

.wallet-log .wallet-log-item view {
  float: right;
  display: inline-block;
}

.plus {
  /* background-image: linear-gradient(to top, #48c6ef 0%, #6f86d6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent; */
}

.plus::before {
  content: '+';
}

.less {
  font-weight: bold;
  background-image: linear-gradient(120deg, #f093fb 0%, #f5576c 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.less::before {
  content: '-';
}
