<!--pages/account/addinfo.wxml-->


<view class='hi'>
  <view class='username'>{{ username }}</view>
  <view class='greetings'>hi~ 介绍一下自己吧</view> 
</view>
<view class='div'>
  <view class='img-view' catchtap='clickImage'>
    <image src='{{ avatarUrl }}' mode='aspectFill'></image>
    <view class='camera iconfont icon-camera'></view>
  </view>
  <input class='umbrella-input' placeholder='自我介绍' bindinput='introductionInput'></input>
  <input class='umbrella-input' placeholder='个人网站' bindinput='websiteInput'></input>
  <button class='umbrella-button' catchtap='clickButton'>继续</button>
</view>