/**app.wxss**/
@import "iconfont.wxss";

@font-face {
  /* 数字和字母 */
  font-family: "Hiragino Sans GB W3";
  src: url('https://dexian.cdn.douyait.com/Hiragino%20Sans%20GB%20W3%20number%20and%20letter.woff') format('woff');
}

page {
  font-family: "Hiragino Sans GB W3";
}

.active1 {
  background-color: #e5e5e5;
}

.active2 {
  font-size: 30rpx !important;
  transition: all 100ms;
  -webkit-transition: all 100ms;
}

.umbrella-input {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  border: 1px solid #e5e5e5;
  border-radius: 15rpx;
  padding: 0 30rpx;
  overflow: auto;
}

.umbrella-button {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 15rpx;
  background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
  color: white;
}

.error-border {
  border: 1px solid #FF4040 !important;
}

.success-border {
  border: 1px solid #43CD80 !important;
}

.umbrella-button:after {
  border: none;
}
